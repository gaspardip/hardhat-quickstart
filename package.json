{
  "name": "hardhat-quickstart",
  "packageManager": "yarn@3.1.1",
  "scripts": {
    "compile": "hardhat compile",
    "deploy": "wait-on http://localhost:8545 && hardhat run scripts/deploy.js",
    "node": "hardhat node",
    "set_greeting": "hardhat run scripts/set_greeting.js",
    "start": "run-p node deploy",
    "test": "hardhat test",
    "prettier": "prettier --write 'contracts/**/*.sol' 'scripts/**/*.js' 'test/**/*.js'"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "2.0.3",
    "@nomiclabs/hardhat-waffle": "2.0.1",
    "chai": "4.3.4",
    "ethereum-waffle": "3.4.0",
    "ethers": "5.5.2",
    "hardhat": "2.8.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.5.1",
    "prettier-plugin-solidity": "1.0.0-beta.19",
    "wait-on": "6.0.0"
  }
}
